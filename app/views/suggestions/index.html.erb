  <div class="page-header">
  <h1><%=t '.title', :default => 'Users' %></h1>
</div>

<%= grid(@suggestions) do |g|

   g.column :name=>"ID"  do |task|
     task.id
   end


 g.column :name=>"Nickname" ,:attribute=>'nickname' ,:assoc=>:user do |task|
    task.user.try(:nickname)
  end 



 g.column :name=>"Email" ,:attribute=>'email' ,:assoc=>:user do |task|
    task.user.try(:email)
  
  end

   g.column :name=>"First Name" ,:attribute=>'first_name' ,:assoc=>:user do |task|
     task.user.try(:first_name)

   end


   g.column :name=>"Last Email" ,:attribute=>'last_name' ,:assoc=>:user do |task|
     task.user.try(:last_email)
   end

   g.column :name=>"Subject" ,:attribute=>'subject' do |task|
    task.subject
  end


 g.column :name=>"Description" ,:attribute=>'description' do |task|
    task.description
  end
 g.column :name=>"Created At" ,:attribute=>'created_at' do |task|
    task.created_at
  end
g.column :name=>"Actions" ,:filter=>false do |task|
    raw"#{link_to t('.edit', :default => t("helpers.links.edit")),
                      edit_suggestion_path(task), :class => 'btn btn-default btn-xs'} #{
  link_to t('.destroy', :default => t("helpers.links.destroy")),
  user_path(task),
  :method => :delete,
  :data => { :confirm => t('.confirm', :default => t("helpers.links.confirm", :default => 'Are you sure?')) },
  :class => 'btn btn-xs btn-danger'}" 
  end

end -%>
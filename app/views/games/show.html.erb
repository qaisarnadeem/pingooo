<%- model_class = Game -%>
<div class="page-header">
  <h1><%=t '.title', :default => model_class.model_name.human.titleize %></h1>
</div>

<dl class="dl-horizontal">
  <dt><strong><%= model_class.human_attribute_name(:title) %>:</strong></dt>
  <dd><%= @game.title %></dd>
  <dt><strong><%= model_class.human_attribute_name(:position_x) %>:</strong></dt>
  <dd><%= @game.position_x %></dd>
  <dt><strong><%= model_class.human_attribute_name(:position_y) %>:</strong></dt>
  <dd><%= @game.position_y %></dd>
  <dt><strong><%= model_class.human_attribute_name(:position_offset) %>:</strong></dt>
  <dd><%= @game.position_offset %></dd>
  <dt><strong><%= model_class.human_attribute_name(:number_of_winner) %>:</strong></dt>
  <dd><%= @game.number_of_winner %></dd>
  <dt><strong><%= model_class.human_attribute_name(:status) %>:</strong></dt>
  <dd><%= @game.status %></dd>
</dl>

<%= link_to t('.back', :default => t("helpers.links.back")),
              games_path, :class => 'btn btn-default'  %>
<%= link_to t('.edit', :default => t("helpers.links.edit")),
              edit_game_path(@game), :class => 'btn btn-default' %>
<%= link_to t('.destroy', :default => t("helpers.links.destroy")),
              game_path(@game),
              :method => 'delete',
              :data => { :confirm => t('.confirm', :default => t("helpers.links.confirm", :default => 'Are you sure?')) },
              :class => 'btn btn-danger' %>

<%= form_for @gameplay, :html => { :class => "form-horizontal gameplay" } do |f| %>

  <% if @gameplay.errors.any? %>
    <div id="error_expl" class="panel panel-danger">
      <div class="panel-heading">
        <h3 class="panel-title"><%= pluralize(@gameplay.errors.count, "error") %> prohibited this gameplay from being saved:</h3>
      </div>
      <div class="panel-body">
        <ul>
        <% @gameplay.errors.full_messages.each do |msg| %>
          <li><%= msg %></li>
        <% end %>
        </ul>
      </div>
    </div>
  <% end %>

  <div class="form-group">
    <%= f.label :position_x, :class => 'control-label col-lg-2' %>
    <div class="col-lg-10">
      <%= f.text_field :position_x, :class => 'form-control' %>
    </div>
    <%=f.error_span(:position_x) %>
  </div>
  <div class="form-group">
    <%= f.label :position_y, :class => 'control-label col-lg-2' %>
    <div class="col-lg-10">
      <%= f.text_field :position_y, :class => 'form-control' %>
    </div>
    <%=f.error_span(:position_y) %>
  </div>
  <div class="form-group">
    <%= f.label :game_id, :class => 'control-label col-lg-2' %>
    <div class="col-lg-10">
      <%= f.text_field :game_id, :class => 'form-control' %>
    </div>
    <%=f.error_span(:game_id) %>
  </div>
  <div class="form-group">
    <%= f.label :user_id, :class => 'control-label col-lg-2' %>
    <div class="col-lg-10">
      <%= f.text_field :user_id, :class => 'form-control' %>
    </div>
    <%=f.error_span(:user_id) %>
  </div>
  <div class="form-group">
    <%= f.label :chance_number, :class => 'control-label col-lg-2' %>
    <div class="col-lg-10">
      <%= f.text_field :chance_number, :class => 'form-control' %>
    </div>
    <%=f.error_span(:chance_number) %>
  </div>
  <div class="form-group">
    <%= f.label :is_hit, :class => 'control-label col-lg-2' %>
    <div class="col-lg-10">
      <%= f.text_field :is_hit, :class => 'form-control' %>
    </div>
    <%=f.error_span(:is_hit) %>
  </div>

  <div class="form-group">
    <div class="col-lg-offset-2 col-lg-10">
      <%= f.submit nil, :class => 'btn btn-primary' %>
      <%= link_to t('.cancel', :default => t("helpers.links.cancel")),
                gameplays_path, :class => 'btn btn-default' %>
    </div>
  </div>

<% end %>

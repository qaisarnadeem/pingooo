<%- model_class = Gameplay -%>
<div class="page-header">
  <h1><%=t '.title', :default => model_class.model_name.human.pluralize.titleize %></h1>
</div>
<table class="table table-striped">
  <thead>
    <tr>
      <th><%= model_class.human_attribute_name(:id) %></th>
      <th><%= model_class.human_attribute_name(:postion_x) %></th>
      <th><%= model_class.human_attribute_name(:position_y) %></th>
      <th><%= model_class.human_attribute_name(:game_id) %></th>
      <th><%= model_class.human_attribute_name(:user_id) %></th>
      <th><%= model_class.human_attribute_name(:chance_number) %></th>
      <th><%= model_class.human_attribute_name(:is_hit) %></th>
      <th><%= model_class.human_attribute_name(:created_at) %></th>
      <th><%=t '.actions', :default => t("helpers.actions") %></th>
    </tr>
  </thead>
  <tbody>
    <% @gameplays.each do |gameplay| %>
      <tr>
        <td><%= link_to gameplay.id, gameplay_path(gameplay) %></td>
        <td><%= gameplay.postion_x %></td>
        <td><%= gameplay.position_y %></td>
        <td><%= gameplay.game_id %></td>
        <td><%= gameplay.user_id %></td>
        <td><%= gameplay.chance_number %></td>
        <td><%= gameplay.is_hit %></td>
        <td><%=l gameplay.created_at %></td>
        <td>
          <%= link_to t('.edit', :default => t("helpers.links.edit")),
                      edit_gameplay_path(gameplay), :class => 'btn btn-default btn-xs' %>
          <%= link_to t('.destroy', :default => t("helpers.links.destroy")),
                      gameplay_path(gameplay),
                      :method => :delete,
                      :data => { :confirm => t('.confirm', :default => t("helpers.links.confirm", :default => 'Are you sure?')) },
                      :class => 'btn btn-xs btn-danger' %>
        </td>
      </tr>
    <% end %>
  </tbody>
</table>

<%= link_to t('.new', :default => t("helpers.links.new")),
            new_gameplay_path,
            :class => 'btn btn-primary' %>

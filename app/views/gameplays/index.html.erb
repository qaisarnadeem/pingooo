<div class="page-header">
  <h1><%=t '.title', :default =>'Transactions'%></h1>
</div>
<%= grid(@gameplays) do |g|

   g.column :name=>"Competition ID"  ,:attribute=>'game_id' ,:custom_filter=>:auto,:auto_reload=>true do |task|
     task.game_id
   end

    g.column :name=>"User ID"  ,:attribute=>'user_id' do |task|
     task.user_id
   end

   g.column :name=>"Chance Number"  ,:attribute=>'chance_number' ,:custom_filter=>:auto ,:auto_reload=>true do |task|
     task.chance_number
   end

   g.column :name=>"Position X"  ,:attribute=>'position_x' do |task|
     task.position_x
   end

   g.column :name=>"Position Y"  ,:attribute=>'position_y' do |task|
     task.position_y
   end

   g.column :name=>"Distance From Ball"  ,:attribute=>'daviation' ,:filter_type=>:range do |task|
     task.daviation
   end

  g.column :name=>"Transaction Time"  , :attribute=>'created_at' do |task|
    task.created_at
  end

  g.column :name=>"Actions" ,:filter=>false do |task|
    raw"#{link_to t('.edit', :default => t("helpers.links.edit")),
                      edit_gameplay_path(task), :class => 'btn btn-default btn-xs'} #{
  link_to t('.destroy', :default => t("helpers.links.destroy")),
  gameplay_path(task),
  :method => :delete,
  :data => { :confirm => t('.confirm', :default => t("helpers.links.confirm", :default => 'Are you sure?')) },
  :class => 'btn btn-xs btn-danger'}" 
  end

end -%>
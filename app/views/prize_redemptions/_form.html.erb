<%= form_for @prize_redemption, :html => { :class => "form-horizontal prize_redemption" } do |f| %>

  <% if @prize_redemption.errors.any? %>
    <div id="error_expl" class="panel panel-danger">
      <div class="panel-heading">
        <h3 class="panel-title"><%= pluralize(@prize_redemption.errors.count, "error") %> prohibited this prize_redemption from being saved:</h3>
      </div>
      <div class="panel-body">
        <ul>
        <% @prize_redemption.errors.full_messages.each do |msg| %>
          <li><%= msg %></li>
        <% end %>
        </ul>
      </div>
    </div>
  <% end %>

  <div class="form-group">
    <%= f.label :user_id, :class => 'control-label col-lg-2' %>
    <div class="col-lg-10">
      <%= f.text_field :user_id, :class => 'form-control' %>
    </div>
    <%=f.error_span(:user_id) %>
  </div>
  <div class="form-group">
    <%= f.label :game_id, :class => 'control-label col-lg-2' %>
    <div class="col-lg-10">
      <%= f.text_field :game_id, :class => 'form-control' %>
    </div>
    <%=f.error_span(:game_id) %>
  </div>
  <div class="form-group">
    <%= f.label :country_specific_prize_id, :class => 'control-label col-lg-2' %>
    <div class="col-lg-10">
      <%= f.text_field :country_specific_prize_id, :class => 'form-control' %>
    </div>
    <%=f.error_span(:country_specific_prize_id) %>
  </div>
  <div class="form-group">
    <%= f.label :status, :class => 'control-label col-lg-2' %>
    <div class="col-lg-10">
      <%= f.text_field :status, :class => 'form-control' %>
    </div>
    <%=f.error_span(:status) %>
  </div>

  <div class="form-group">
    <div class="col-lg-offset-2 col-lg-10">
      <%= f.submit nil, :class => 'btn btn-primary' %>
      <%= link_to t('.cancel', :default => t("helpers.links.cancel")),
                prize_redemptions_path, :class => 'btn btn-default' %>
    </div>
  </div>

<% end %>

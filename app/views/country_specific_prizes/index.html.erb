<%- model_class = CountrySpecificPrize -%>
<div class="page-header">
  <h1><%=t '.title', :default => model_class.model_name.human.pluralize.titleize %></h1>
</div>
<table class="table table-striped">
  <thead>
    <tr>
      <th><%= model_class.human_attribute_name(:id) %></th>
      <th><%= model_class.human_attribute_name(:prize_category) %></th>
      <th><%= model_class.human_attribute_name(:country_id) %></th>
      <th>Country ID</th>
      <th><%= model_class.human_attribute_name(:amount) %></th>
      <!--<th><%= model_class.human_attribute_name(:status) %></th>-->
      <th><%= model_class.human_attribute_name(:created_at) %></th>
      <th><%=t '.actions', :default => t("helpers.actions") %></th>
    </tr>
  </thead>
  <tbody>
    <% @country_specific_prizes.each do |country_specific_prize| %>
      <tr>
        <td><%= country_specific_prize.id%></td>
        <td><%= country_specific_prize.prize_category.try(:title) %></td>
        <td><%= country_specific_prize.country.try(:name) %></td>
        <td><%= country_specific_prize.country.id %></td>
        <td><%= country_specific_prize.amount %></td>
        <!--<td><%= country_specific_prize.status %></td>-->
        <td><%=l country_specific_prize.created_at %></td>
        <td>
          <%= link_to t('.edit', :default => t("helpers.links.edit")),
                      edit_country_specific_prize_path(country_specific_prize), :class => 'btn btn-default btn-xs' %>
          <%= link_to t('.destroy', :default => t("helpers.links.destroy")),
                      country_specific_prize_path(country_specific_prize),
                      :method => :delete,
                      :data => { :confirm => t('.confirm', :default => t("helpers.links.confirm", :default => 'Are you sure?')) },
                      :class => 'btn btn-xs btn-danger' %>
        </td>
      </tr>
    <% end %>
  </tbody>
</table>

<%= link_to t('.new', :default => t("helpers.links.new")),
            new_country_specific_prize_path,
            :class => 'btn btn-primary' %>

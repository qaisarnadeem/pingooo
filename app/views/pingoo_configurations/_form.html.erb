<%= form_for @pingoo_configuration, :html => { :class => "form-horizontal pingoo_configuration" } do |f| %>

  <% if @pingoo_configuration.errors.any? %>
    <div id="error_expl" class="panel panel-danger">
      <div class="panel-heading">
        <h3 class="panel-title"><%= pluralize(@pingoo_configuration.errors.count, "error") %> prohibited this pingoo_configuration from being saved:</h3>
      </div>
      <div class="panel-body">
        <ul>
        <% @pingoo_configuration.errors.full_messages.each do |msg| %>
          <li><%= msg %></li>
        <% end %>
        </ul>
      </div>
    </div>
  <% end %>

  <div class="form-group">
    <%= f.label :configuration_title, :class => 'control-label col-lg-2' %>
    <div class="col-lg-10">
      <%= f.text_field :configuration_id, {:class => 'form-control' ,:style=>"text-transform:uppercase;"}.merge(@pingoo_configuration.new_record? ? {} : {:disabled=>"disabled"})%>
    </div>
    <%=f.error_span(:configuration_id) %>
  </div>
  <div class="form-group">
    <%= f.label :value, :class => 'control-label col-lg-2' %>
    <div class="col-lg-10">
      <%= f.text_field :value, :class => 'form-control' %>
    </div>
    <%=f.error_span(:value) %>
  </div>

  <div class="form-group">
    <div class="col-lg-offset-2 col-lg-10">
      <%= f.submit nil, :class => 'btn btn-primary' %>
      <%= link_to t('.cancel', :default => t("helpers.links.cancel")),
                pingoo_configurations_path, :class => 'btn btn-default' %>
    </div>
  </div>

<% end %>

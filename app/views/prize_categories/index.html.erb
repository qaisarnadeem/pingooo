<p id="notice"><%= notice %></p>

<h1>Listing Prize Categories</h1>

<table>
  <thead>
    <tr>
      <th>Title</th>
      <th>Description</th>
      <th>Amount</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @prize_categories.each do |prize_category| %>
      <tr>
        <td><%= prize_category.title %></td>
        <td><%= prize_category.description %></td>
        <td><%= prize_category.amount %></td>
        <td><%= link_to 'Show', prize_category %></td>
        <td><%= link_to 'Edit', edit_prize_category_path(prize_category) %></td>
        <td><%= link_to 'Destroy', prize_category, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>


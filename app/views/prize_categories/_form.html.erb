<%= form_for @prize_category, :html => { :class => "form-horizontal prize_category",:multipart=>true } do |f| %>

  <% if @prize_category.errors.any? %>
    <div id="error_expl" class="panel panel-danger">
      <div class="panel-heading">
        <h3 class="panel-title"><%= pluralize(@prize_category.errors.count, "error") %> prohibited this prize_category from being saved:</h3>
      </div>
    </div>
  <% end %>

  <div class="form-group">
    <%= f.label :title, :class => 'control-label col-lg-2' %>
    <div class="col-lg-10">
      <%= f.text_field :title, :class => 'form-control' %>
    </div>
    <%=f.error_span(:title) %>
  </div>
  <div class="form-group">
    <%= f.label :description, :class => 'control-label col-lg-2' %>
    <div class="col-lg-10">
      <%= f.text_field :description, :class => 'form-control' %>
    </div>
    <%=f.error_span(:description) %>
  </div>
  <div class="form-group">
    <%= f.label :amount, :class => 'control-label col-lg-2' %>
    <div class="col-lg-10">
      <%= f.text_field :amount, :class => 'form-control' %>
    </div>
    <%=f.error_span(:amount) %>
  </div>

<div class="form-group">
    <%= f.label :icon, :class => 'control-label col-lg-2' %>
    <div class="col-lg-10">
      <%= f.file_field :icon, :class => 'form-control' %>
    </div>
    <%=f.error_span(:icon) %>
  </div>

    <div class="form-group">
      <%= f.label 'Countries', :class => 'control-label col-lg-2' %>
      <div class="col-lg-10">
        <%= select_tag 'countries_ids[]' ,options_for_countries(@prize_category.country_ids),:multiple=>'multiple', :class => 'form-control chosen-select' %>
      </div>
    </div>

  <div class="form-group">
      <%=label_tag "",'',:class=>"control-label col-lg-2"%>
      <div class="col-lg-10">
        <%= image_tag @prize_category.icon.url%>
      </div>
    </div>

  <div class="form-group">
    <div class="col-lg-offset-2 col-lg-10">
      <%= f.submit nil, :class => 'btn btn-primary' %>
      <%= link_to t('.cancel', :default => t("helpers.links.cancel")),
                prize_categories_path, :class => 'btn btn-default' %>
    </div>
  </div>

<% end %>
